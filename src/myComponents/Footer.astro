---
import Socmeds from "./Socmeds.astro";
import Social from "./Social.astro";
const platform = "Github";
const username = "withastro";

//CSS Style
const textWeight = 500;
---

<footer class="text-center mt-80 bg-violet-50 pt-10">
  <div>
    <p class="text-2xl text-black font-semibold italic">
      Learn more about my projects on <a
        href={`https://www.${platform}.com/${username}`}
        ><span class="link-github">{platform}!</span></a
      >
    </p>
  </div>

  <style>
    .link-github {
      color: blueviolet;
    }

    .link-github:hover {
      font-size: larger;
      color: blue;
    }
  </style>

  <div class="flex justify-center mt-6"><Socmeds /></div>
</footer>
